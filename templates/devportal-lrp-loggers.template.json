{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    },
    "PolicyXMLBaseUrl": {
      "type": "string"
    },
    "LoggerResourceId": {
      "type": "object"
    }
  },
  "resources": [
    {
      "properties": {
        "loggerType": "applicationInsights",
        "credentials": {
          "instrumentationKey": "{{Logger-Credentials-5e31fcade98adc12080d3148}}"
        },
        "isBuffered": true,
        "resourceId": "[parameters('LoggerResourceId').lrptest]"
      },
      "name": "[concat(parameters('ApimServiceName'), '/lrp-test')]",
      "type": "Microsoft.ApiManagement/service/loggers",
      "apiVersion": "2019-01-01"
    },
    {
      "properties": {
        "loggerType": "azureMonitor",
        "isBuffered": true
      },
      "name": "[concat(parameters('ApimServiceName'), '/azuremonitor')]",
      "type": "Microsoft.ApiManagement/service/loggers",
      "apiVersion": "2019-01-01"
    }
  ]
}